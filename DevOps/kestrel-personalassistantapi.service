[Unit]
Description=PersonalAssistant.Api running on Ubuntu

[Service]
WorkingDirectory=/home/personalassistant/Api
ExecStart=/usr/bin/dotnet /home/personalassistant/Api/Api.dll
Restart=always
# Restart service after 10 seconds if dotnet service crashes
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=dotnet-personalassistantapi
User=personalassistant
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false

[Install]
WantedBy=multi-user.target
