{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./types/**/*.d.ts"],
  "atom": {
    "rewriteTsconfig": false
  }
}
